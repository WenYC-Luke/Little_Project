<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">

<style>
    .bg_color {
        background-color: #F2AE30;
    }
</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow" style="width: 100%; max-width: 650px; padding: 20px;">
        <form id="farmersForm" action="/Farmers/FarmersInfoAdd" method="post" enctype="multipart/form-data">
            @if (ViewBag.Message != null)
            {
                <div class="alert @(ViewBag.Message.Contains("錯誤") ? "alert-danger" : "alert-info")" role="alert">
                    @ViewBag.Message
                </div>
            }

            <div class="bg_color py-2 rounded mb-4">
                <h4 class="text-center mb-0">新增小農資料</h4>
            </div>

            <div class="mb-3">
                <label for="Name" class="form-label">負責人姓名</label>
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>
            </div>

            <div class="mb-3">
                <label for="FarmName" class="form-label">農場名稱</label>
                <input type="text" class="form-control" id="FarmName" name="FarmName" value="@Model.FarmName" required>
            </div>

            <div class="mb-3">
                <label for="Image" class="form-label">小農圖片</label>
                <input type="file" class="form-control" id="Image" name="Image">
            </div>

            <div class="mb-3">
                <label for="Phone" class="form-label">連絡電話</label>
                <input type="tel" class="form-control" id="Phone" name="Phone" value="@Model.Phone" required>
            </div>

            <div class="mb-3">
                <label for="Email" class="form-label">信箱</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required>
            </div>

            <div class="mb-3">
                <label for="Address" class="form-label">農場地址</label>
                <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" required>
            </div>

            <div class="mb-3">
                <label for="CropsType" class="form-label">農產品種類</label>
                <select class="form-select" id="CropsType" name="CropsType">
                    <option value="未選擇" @(Model.CropsType == "未選擇" ? "selected" : "")>-- 請選擇 --</option>
                    <optgroup label="-- 水果 --">
                        <option value="Mango" @(Model.CropsType == "Mango" ? "selected" : "")>芒果</option>
                        <option value="Apple" @(Model.CropsType == "Apple" ? "selected" : "")>蘋果</option>
                    </optgroup>
                    <optgroup label="-- 飲品 --">
                        <option value="Milk" @(Model.CropsType == "Milk" ? "selected" : "")>鮮奶</option>
                        <option value="Tea" @(Model.CropsType == "Tea" ? "selected" : "")>茶葉</option>
                        <option value="Coffee" @(Model.CropsType == "Coffee" ? "selected" : "")>咖啡</option>
                    </optgroup>
                </select>
            </div>

            <div class="mb-3">
                <label for="PlantType" class="form-label">生產方式</label>
                <select class="form-select" id="PlantType" name="PlantType">
                    <option value="未選擇" @(Model.PlantType == "未選擇" ? "selected" : "")>-- 請選擇 --</option>
                    <option value="傳統農法" @(Model.PlantType == "傳統農法" ? "selected" : "")>傳統農法</option>
                    <option value="有機農業" @(Model.PlantType == "有機農業" ? "selected" : "")>有機農業</option>
                    <option value="自然農法" @(Model.PlantType == "自然農法" ? "selected" : "")>自然農法</option>
                </select>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary me-2">送出</button>
                <a href="/Backend/DashBoard?show=FarmersInfoTable" class="btn btn-secondary">返回</a>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
