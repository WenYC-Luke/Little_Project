@using Farmer_Project.Models.ViewModel
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">

@model UserEditViewModel

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow" style="width: 100%; max-width: 650px; padding: 20px;">
        <form method="post" action="/Members/Edit" class="p-3">
            <div class="bg_color py-2 rounded mb-4">
                <h4 class="text-center mb-0">編輯會員資料</h4>
            </div>

            <input type="hidden" name="Id" value="@Model.Id">

            <div class="mb-3">
                <label for="Role" class="form-label">權限</label>
                <select class="form-select" id="Role" name="role" required>
                    <option value="" disabled selected>請選擇</option>
                    <option value="Admin" @(Model.Role == "Admin" ? "selected" : "")>Admin</option>
                    <option value="User" @(Model.Role == "User" ? "selected" : "")>User</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="Name" class="form-label">名稱</label>
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
            </div>

            <div class="mb-3">
                <label for="Email" class="form-label">帳號</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email">
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">密碼</label>
                <input type="password" class="form-control" id="Password" name="Password" value="@Model.Password">
            </div>

            <div class="mb-3">
                <label for="Phone" class="form-label">手機號碼</label>
                <input type="text" class="form-control" id="Phone" name="Phone" value="@Model.Phone">
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary me-2">送出</button>
                <a href="/Backend/DashBoard?show=MemberTable" class="btn btn-secondary">返回</a>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>

